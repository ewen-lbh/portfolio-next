{{ $latest := .Works | latest }}

extends .layout

block content
	p.pre-h1(translate) Hi, I'm Ewen Le Bihan.
	h1(translate) These are my creations.
	p.intro
		i18n Hi! I'm Ewen Le Bihan, I'm {{ .Age }} years old and I'm interested in almost anything that is both creative and digital.
		a(href="/learn-more")
			img.icon(src='{{ asset "icons/arrow-right.svg" }}')
			i18n Learn more


	h2(translate) most recent one

	section.work-card.work-card--large: a(href="/{{ $latest.ID }}")
		{{ if len $latest.Media }}
		img.work-card__image(src="{{ $latest | getThumbnailSource }}")
		{{ else }}
		svg.work-card__image--empty
		{{ end }}
		h3 {{ $latest.Title }}
		{{ if len $latest.Paragraphs }}
		p.
			{{ $latest | getSummary | tindent 2 }}
		{{ end }}

	h2(translate) all of 'em

	{{ .Works | intoGallery }}
