extends .layout

block content
	ul.tags
		{{ range .CurrentWork.Metadata.Tags }}
		li: a(href="/{{ (lookupTag .).URLName }}" translate) {{ . }}
		{{ end }}

	section.contents
		h1 {{ .CurrentWork.Title }}

		{{ .CurrentWorkBuiltLayout | tnindent 2 }}


	{{ if (len .CurrentWork.Metadata.MadeWith) }}
	section.made-with
		h2.made-with__title(translate) made with
		p.made-with__explainer(translate) the software, frameworks, libraries, materials and services I used to make this
		ul.made-with__list
			{{ range .CurrentWork.Metadata.MadeWith }}
			li: a(href="/using/{{ (lookupTech .).URLName }}")
				img(src='{{ asset (printf "logos/%s.svg" (lookupTech .).URLName) }}')
				span(translate) {{ (lookupTech .).DisplayName }}
			{{ end -}}
	{{ end }}

	style.
		:root {
			{{ if .CurrentWork.Metadata.Colors.Primary }}
			--primary: #{{ .CurrentWork.Metadata.Colors.Primary }};
			{{ end }}
			{{ if .CurrentWork.Metadata.Colors.Secondary }}
			--secondary: #{{ .CurrentWork.Metadata.Colors.Secondary }};
			{{ end }}
			{{ if .CurrentWork.Metadata.Colors.Tertiary }}
			--tertiary: #{{ .CurrentWork.Metadata.Colors.Tertiary }};
			{{ end }}
		}
