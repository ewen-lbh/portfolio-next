{{ $releases := .Works | withTag ("music" | lookupTag) }}
{{ $latestRelease := $releases | latest }}


extends .layout

block content
	p.pre-h1(translate) Hi, I'm Ewen Le Bihan.
	h1(translate) I also make electronic music.
	p.intro
		i18n Iâ€™ve been experimenting with sounds, their textures and their musicality since I was 7 years old.
		a(href="/")
			img.icon(src='{{ asset "icons/arrow-left.svg" }}')
			i18n Back home


	section#latest

		h2(translate) latest release

		a(href="/{{ $latestRelease.ID }}").work-card.work-card--large(style="background-image:url('{{ $latestRelease | getThumbnailSource }}');")
			h3 {{ $latestRelease.Title }}
			{{ if len $latestRelease.Paragraphs }}
			p.
				{{ $latestRelease | getSummary | tindent 4 }}
			{{ end }}

	section#all

		h2(translate) past releases

		{{ $releases | intoGallery | tindent 2 }}
